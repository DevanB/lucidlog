{
  "name": "lucidlog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:db": "turso dev --db-file=db/dev.db",
    "build": "drizzle-kit push && next build --turbopack",
    "start": "next start",
    "lint": "next lint",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx scripts/seed-db.ts",
    "test": "concurrently -k -s first -n db,test \"pnpm test:db\" \"pnpm test:run\"",
    "test:ui": "npm-run-all --parallel test:db test:run:ui",
    "test:db": "turso dev --port=8081",
    "test:run": "wait-on tcp:127.0.0.1:8081 && dotenvx run -f .env.test -- vitest run",
    "test:run:ui": "wait-on tcp:127.0.0.1:8081 && dotenvx run -f .env.test -- vitest --ui"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.20.2",
    "@clerk/themes": "^2.2.49",
    "@headlessui/react": "^2.2.4",
    "@libsql/client": "^0.15.9",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-navigation-menu": "^1.2.13",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.2",
    "lucide-react": "^0.512.0",
    "next": "15.3.3",
    "next-themes": "^0.4.6",
    "postcss": "^8.5.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sonner": "^2.0.5",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^4"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.44.2",
    "@eslint/eslintrc": "^3",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/ui": "^3.2.3",
    "concurrently": "^9.1.2",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.31.1",
    "drizzle-seed": "^0.3.1",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "jsdom": "^26.1.0",
    "npm-run-all": "^4.1.5",
    "tsx": "^4.20.3",
    "tw-animate-css": "^1.3.3",
    "typescript": "^5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.3",
    "wait-on": "^8.0.3"
  }
}
