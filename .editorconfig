root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2

[*.json]
indent_size = 2

[*.{css,scss,sass}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[compose.yaml]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.blade.php]
indent_size = 4
