{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "laravel-boost": {
      "type": "local",
      "enabled": true,
      "command": ["php", "artisan", "boost:mcp"]
    },
    "herd": {
      "type": "local",
      "enabled": true,
      "command": [
        "php",
        "/Applications/Herd.app/Contents/Resources/herd-mcp.phar"
      ],
      "environment": {
        "SITE_PATH": "./lucidlog"
      }
    },
    "ultracite": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://www.ultracite.ai/api/mcp/mcp"
      ]
    }
  }
}
